<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
  .stars-outer::before {
    content: '\f006 \f006 \f006 \f006 \f006';
    font-family: FontAwesome;
  }

  .stars-outer {
    display: inline-block;
    position: relative;
    margin: 0 10px;
  }

  .stars-inner {
    position: absolute;
    top: 0;
    left: 0;
    white-space: nowrap;
    overflow: hidden;
    width: 0;
  }

  .stars-inner::before {
    content: '\f005 \f005 \f005 \f005 \f005';
    font-family: FontAwesome;
    color: #f8ce0b;
  }

  .rating-container {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 10px;
  }

  .rating-number {
    font-size: 16px;
    font-weight: bold;
  }
</style>

<div class="rating-container" data-rating="{{ ratingValue }}">
  <span class="rating-number">{{ ratingValue }}</span>
  <div class="stars-outer">
    <div class="stars-inner">&nbsp;</div>
  </div>
  <span class="rating-text">{{ text }}</span>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const container = document.querySelector('.rating-container');
    if (!container) return;

    const rating = parseFloat(container.dataset.rating) || 0;
    const starTotal = 5;
    const starPercentage = (rating / starTotal) * 100;
    const starPercentageRounded = Math.round(starPercentage / 10) * 10;

    const starsInner = container.querySelector('.stars-inner');
    if (starsInner) {
      starsInner.style.width = starPercentageRounded + '%';
    }
  });
</script>
